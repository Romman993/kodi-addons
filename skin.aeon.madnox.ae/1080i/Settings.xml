					</item>
					<item id="8">
						<label>$LOCALIZE[14209]</label>
						<property name="description">$LOCALIZE[31406]</property>
						<onclick>ActivateWindow(SystemSettings)</onclick>
						<icon>special://skin/backgrounds/system_icons/system.jpg</icon>
					</item>
					<item id="21">
